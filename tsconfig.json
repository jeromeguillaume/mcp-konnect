{
    "compilerOptions": {
      //"module": "NodeNext",        // Updated from Node16
      //"moduleResolution": "NodeNext", // Updated from Node16
      "module": "ESNext",
      "target": "ES2022",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }